echo     "    swarm -l|--logs follow [OPTIONS] CONTAINER        - Automatically follow logFiles by scrolling text"
echo 	 "    swarm -l|--logs tail FILENAME                     - Output the last 50 lines of the specified file"
echo     "    swarm -l|--logs CONTAINER                         - View logs for the specified container"
