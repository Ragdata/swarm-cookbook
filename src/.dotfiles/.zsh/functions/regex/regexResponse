# undefined
builtin autoload -X

declare RESP='[yn]|yes|no'
declare AFFIRM='[y]|yes'
declare NEGAT='[n]|no'

[[ -n "${!1}" ]] && { printf '%s' "${!1}"; return 0; } || return 1
# ==================================================================
# FUNCTION ALIASES
# ==================================================================
regex::RESP()			{ regex::response RESP; }
regex::AFFIRM()			{ regex::response AFFIRM; }
regex::NEGAT()			{ regex::response NEGAT; }
